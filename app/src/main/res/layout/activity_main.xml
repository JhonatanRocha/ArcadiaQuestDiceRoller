<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jhonatanrocha.arcadiaquest.diceroller.MainActivity"
    android:background="@drawable/background_acdr">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labelLinearLayoutId"
        android:layout_above="@+id/linearLayoutForms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="ATTACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelAttackId"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="@dimen/label_title"
            android:layout_weight="1"
            android:textColor="@android:color/black" />

        <TextView
            android:text="DEFENSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelDefenseId"
            android:textAlignment="center"
            android:textSize="@dimen/label_title"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_above="@+id/labelLinearLayoutId"
        android:layout_centerHorizontal="true">


        <ImageView
            android:layout_width="@dimen/dice_dimension"
            android:layout_height="@dimen/dice_dimension"
            android:src="@drawable/symbol_melee"
            android:id="@+id/imgMeleeLabel"
            android:scaleType="fitStart"
            android:layout_margin="30dp" />

        <ImageView
            android:layout_width="@dimen/dice_dimension"
            android:layout_height="@dimen/dice_dimension"
            android:src="@drawable/symbol_block"
            android:id="@+id/imgDefenseLabel"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:layout_margin="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/linearLayoutForms"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:text="ROLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelRollId"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="@dimen/label_title"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <ImageButton
        android:src="@drawable/dices"
        android:id="@+id/imageButtonThrowDiceId"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:layout_above="@+id/labelRollId"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutForms"
        android:layout_above="@+id/imageButtonThrowDiceId"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="@dimen/decimalForm"
            android:layout_height="@dimen/heightDecimalForms"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/formDecimalAttack"
            android:background="@android:color/background_light"
            android:layout_margin="10dp"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="@dimen/decimalForm"
            android:layout_height="@dimen/heightDecimalForms"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/formDecimalDefense"
            android:background="@android:color/background_light"
            android:layout_margin="10dp"
            android:selectAllOnFocus="false"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:src="@drawable/ac_app_thumb"
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitStart"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</RelativeLayout>
